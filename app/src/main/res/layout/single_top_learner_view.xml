<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_top_leader_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#FFFFFF"
    android:elevation="10dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/learner_badge_image"
        android:layout_width="107dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_learner" />

    <TextView
        android:id="@+id/learner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/placeholder"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/learner_badge_image"
        app:layout_constraintTop_toTopOf="@+id/learner_badge_image" />

    <TextView
        android:id="@+id/learner_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/placeholder"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/learner_name"
        app:layout_constraintTop_toBottomOf="@+id/learner_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
